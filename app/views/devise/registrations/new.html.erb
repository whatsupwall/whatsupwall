<div class="well">
  <h1>Get started with Twitisowall</h1>
  <div class="row">
    <div class="span6">
      <h2>Sign up with an email address and a password</h2>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <p><%= f.label :name %>
        <%= f.text_field :name, :class => 'medium span5' %></p>

        <div><%= f.label :email %>
        <%= f.email_field :email, :class => 'medium span5' %></div>

        <div><%= f.label :password %>
        <%= f.password_field :password, :class => 'medium span5' %></div>

        <div><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, :class => 'medium span5' %></div>

        <div><%= f.submit "Create account", :class => 'btn btn-primary' %></div>
      <% end %>
    </div>

    <div class="span1">
      <h1>OR</h1>
    </div>

    <div class="span4 pull-right">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Connect with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn btn-large btn-#{provider.to_s}" %>
        <% end -%>
      <% end -%>
    </div>
  </div>
</div>
